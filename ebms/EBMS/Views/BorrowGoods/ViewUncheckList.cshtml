@{
    ViewBag.Title = "ViewUncheckList";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<div class="Company-top-box">
    <div class="search-box">
         <input type="text" placeholder="申请人.." id="txtQuery"  class="icon-search-txt">
         <input type="button" value="查询" id="btnQuery" class="icon-search">

     </div>
     <div class="btn-bar">
         <a href="#" id="btnCheck" class="icon-check">审核</a>
        
    </div>
</div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>

<script type="text/javascript">
    enterSearch("#btnQuery");
  
    $(function () {
        var url = "GetList?isUncheck=1";
        $('#List').datagrid({
            url: url,
            width: $(window).width()-15,
            method: 'post',
            height: $(window).height() - 45,
            fitColumns: true,
           // sortName: 'Code',
            sortOrder: 'desc',
            idField: 'ID',
            pageSize: 20,
            pagination: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            rownumbers: false,//行号
            columns: [[
                { field: 'ID', title: '编号', width: 60, align: 'center' },
                { field: 'PostUser', title: '申请人', width: 120, align: 'center' },
                { field: 'Dept', title: '部门', width: 120, align: 'center' },
                { field: 'PostTime', title: '申请时间', width: 100, align: 'center' },
                { field: 'Purpose', title: '用途', width: 120, align: 'center' },
                { field: 'ReturnDate', title: '预计归还日期', width: 120, align: 'center' },
                { field: 'Status', title: '状态', width: 100, align: 'center', formatter: stateSecond },
               
            ]],
            onDblClickRow: function (rowIndex, rowData) {
                Detail(rowData.ID)
            },


        })

        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 40
            }).datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 40
            });
        });

       
    })

 function Query()
    {
        var queryStr = $("#txtQuery").val();
       
        $('#List').datagrid({
            url: 'GetList?isUncheck=1&queryStr=' + encodeURI(queryStr)   //+ '&statedate=' + statedate + '&EndDate=' + EndDate + '&dianming=' + dianming

        });
        $("#txtQuery").focus().select();
    }
    $('#btnQuery').click(function () {

        Query();

    });
    function Detail(ID) {
        //$("#DetailDiv").prev(".panel-header").find(".panel-title").html("详情")
        //$('#IframeDetail')[0].src = "ViewDetail?PID=" + ID;
        //$('#DetailDiv').dialog('open');
        var url = "ViewDetail?PID=" + ID;
        window.open(url, '详情', "height=" + (window.screen.availHeight * 0.7) + ",width=" + (window.screen.availWidth * 0.7) + ", top=" + (window.screen.availHeight * 0.15) + ", left=" + (window.screen.availWidth * 0.15) + ",scrollbars=yes,resizable=1,modal=false,alwaysRaised=yes");
    }
    $('#btnCheck').click(function () {
        var row = $('#List').datagrid('getSelected');
        if (row) {
            $('#CheckDiv').dialog('open');
            $('#IframeCheck')[0].src = "ViewCheck?PID=" + row.ID;
        }
        else {
            $.messager.alert("提示", "@Lib.MessageRes.PleaseSelect", "info");
        }
    })
    </script>
<div id="DetailDiv" class="easyui-dialog" closed="true" modal="true" title="详情" style="width:50%; height:50%;" resizable="true" closable="true">
    <iframe scrolling="auto" id='IframeDetail' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>
<div id="CheckDiv" class="easyui-dialog" closed="true" modal="true" title="审核" style="width:450px; height:240px;" resizable="true" closable="true">
    <iframe scrolling="auto" id='IframeCheck' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>


