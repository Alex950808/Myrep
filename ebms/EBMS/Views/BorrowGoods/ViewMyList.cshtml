@{
    ViewBag.Title = "ViewMyList";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<div class="Company-top-box">
   
     <div class="search-box">
         <input type="text" placeholder="..." id="txtQuery"  class="icon-search-txt">
         <input type="button" value="查询" id="btnQuery" class="icon-search">
    </div>
   <div class="btn-bar">
       
         <a href="#" id="btnEdit" class="icon-edit">编辑</a>
        <a href="#" id="btnDelete" class="icon-remove">删除</a>
    </div>
 </div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>

<script type="text/javascript">
   
    enterSearch("#btnQuery");
    $(function () {
        var url = "GetList?isMy=1";
        $('#List').datagrid({
            url: url,
            width: $(window).width()-15,
            method: 'post',
            height: $(window).height() - 45,
            fitColumns: true,
           // sortName: 'Code',
            sortOrder: 'desc',
            idField: 'ID',
            pageSize: 20,
            pagination: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            rownumbers: false,//行号
            columns: [[
                { field: 'ID', title: '编号', width: 60, align: 'center' },
                { field: 'PostUser', title: '申请人', width: 120, align: 'center' },
                { field: 'Dept', title: '部门', width: 120, align: 'center' },
                { field: 'PostTime', title: '申请时间', width: 100, align: 'center' },
                { field: 'Purpose', title: '用途', width: 120, align: 'center' },
                { field: 'ReturnDate', title: '预计归还日期', width: 120, align: 'center' },
                { field: 'Status', title: '状态', width: 100, align: 'center', formatter: stateSecond },
            
            ]],
            onDblClickRow: function (rowIndex, rowData) {
                Detail()
            },
        })

        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 40
            }).datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 40
            });
        });


    })

 function Query()
    {
     var queryStr = $("#txtQuery").val();
     $('#List').datagrid({
         url: 'GetList?isMy=1&queryStr=' + encodeURI(queryStr) //+ '&State=' + State// + '&EndDate=' + EndDate + '&dianming=' + dianming

        });
        $("#txtQuery").focus().select();
    }
 $('#btnQuery').click(function () {
     Query();
 });
 $('#btnEdit').click(function () {
     var row = $('#List').datagrid('getSelected');
     if (row) {
         if (row.Status == -1 || row.Status == 2) {
             $('#EditDiv').dialog('open');
             $('#IframeEdit')[0].src = "ViewEdit?ID=" + row.ID;
         }
         else {
             $.messager.alert("提示", "不允许修改该记录", "info");
         }
     }
     else {
         $.messager.alert("提示", "@Lib.MessageRes.PleaseSelect", "info");
     }
 })
 $('#btnDelete').click(function () {
     var row = $('#List').datagrid('getSelected');
     if (row) {
         if (row.Status == -1) {
             $.messager.confirm('提示', '@Lib.MessageRes.DelConfirm', function (r) {
                    if (r) {
                        loading(0)
                       // var row = $('#List').datagrid('getSelected');
                        $.ajax({
                            url: "Delete?ID=" + row.ID,
                            type: "Post",
                            contentType: "application/json",
                            dataType: "json",
                            success: function (data) {
                                if (data.State == "Success") {
                                    $.messager.alert('提示', '@Lib.MessageRes.DelOK', "info");
                                    $('#List').datagrid('reload');
                                    loading(1)
                                }
                                else {
                                    $.messager.alert('提示', data.Message, "info");
                                    loading(1)
                                }
                            },
                            error: function (data)
                            {
                                $.messager.alert('提示', '删除失败', "info");
                                loading(1)
                            }
                        });
                    }
                })
            }
            else {
                $.messager.alert("提示", "不允许删除该记录", "info");
            }
        }
        else {
            $.messager.alert("提示", "@Lib.MessageRes.PleaseSelect", "info");
        }
        $('#List').datagrid("clearSelections");
    })
 
    function Detail() {
        var row = $('#List').datagrid('getSelected');
        if (row != null) {
            //$("#DetailDiv").prev(".panel-header").find(".panel-title").html("详情")
            //$('#IframeDetail')[0].src = "ViewDetail?PID=" + row.ID;
            //$('#DetailDiv').dialog('open');
            var url = "ViewDetail?PID=" + row.ID;
            window.open(url, '详情', "height=" + (window.screen.availHeight * 0.7) + ",width=" + (window.screen.availWidth * 0.7) + ", top=" + (window.screen.availHeight * 0.15) + ", left=" + (window.screen.availWidth * 0.15) + ",scrollbars=yes,resizable=1,modal=false,alwaysRaised=yes");
        }
        else { $.messager.alert('提示', '@Lib.MessageRes.PleaseSelect', "info"); }
    }
</script>
<div id="DetailDiv" class="easyui-dialog" closed="true" modal="true" title="详情" style="width:50%; height:50%;" resizable="true" closable="true">
    <iframe scrolling="auto" id='IframeDetail' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>
<div id="EditDiv" class="easyui-dialog" closed="true" modal="true" title="编辑" style="width:70%; height:70%;" resizable="true" closable="true">
    <iframe scrolling="auto" id='IframeEdit' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>
<div id="CheckDiv" class="easyui-dialog" closed="true" modal="true" title="审核" style="width:35%; height:35%;" resizable="true" closable="true">
    <iframe scrolling="auto" id='IframeCheck' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>

