@{
    ViewBag.Title = "ViewProductPurchasePz";
    Layout = "~/Views/Shared/_Main_Edit.cshtml";
}


<script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
<div class="Company-top-box">
    <div class="search-box">
        <input type="text" id="txtQuery" style="width: 150px;" placeholder="单号" />
        <input type="button" value="查询" id="btnQuery" class="icon-search">
    </div>
    @if (ViewData["userName"].ToString() == "罗瑶")
    {
        <div class="btn-bar">
            <a href="#" onclick="Approve()" class="icon-check">审核</a>
        </div>
    }
    else
    {
        <div class="btn-bar">
            <a href="#" id="btnPz" class="icon-check">产品采购凭证</a>
        </div>
    }
</div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>
<script type="text/javascript">
    //回车触发查询
    enterSearch("#btnQuery");
    $(function () {
        function op(name, url) {
            self.parent.addTab(name, url, '');
            getContextmenu()
        }
        var url = "../Purchase/CheckedPurchasePaymentGoods?pz=" + "pz";
        $('#List').datagrid({
            url: url,
            width: $(window).width() - 15,
            method: 'post',
            height: $(window).height() * 0.95,
            fitColumns: true,
            sortName: 'ID',
            sortOrder: 'desc',
            idField: 'id',
            pageSize: 20,
            pagination: true,
            showFooter: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            rownumbers: false,//行号
            columns: [[
                 { field: 'PurchaseOddNum', title: '采购编号', width: 200, align: 'center' },
                  { field: 'needpay', title: '本次需付金额', width: 100, align: 'center' },
                 { field: 'payment', title: '本次支付金额', width: 100, align: 'center' },
                 { field: 'paymentName', title: '支付人员', width: 100, align: 'center' },
                 {
                     field: 'ispayment', title: '是否支付', width: 100, align: 'center', formatter: function (value, row, index) {
                         switch (row.ispayment) {
                             case 0:
                                 return "<font color=#d02e2e>未支付</font>";
                                 break;
                             case 1:
                                 return "<font color=#2967c9>已支付</font>";
                                 break;
                             case 2:
                                 return "<font color=#1fc73a>不同意</font>";
                                 break;
                         }
                     }
                 },
                                                   {
                                                       field: 'Is_PzStatus', title: '凭证状态', width: 60, align: 'center', formatter: function (value, row, index) {
                                                           switch (value) {
                                                               case 0:
                                                                   return "<font color=blue>未凭证</font>"
                                                                   break;
                                                               case -1:
                                                                   return "<font color=blue>未审核</font>"
                                                                   break;
                                                               case 2:
                                                                   return "<font color=red>不同意</font>"
                                                                   break;
                                                               default:
                                                                   return "<font color=red></font>"
                                                           }
                                                       }
                                                   },
                  { field: 'Pz_Memo', title: '凭证审核备注', width: 100, align: 'center' },
            ]]
        });
        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            }).datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            });
        });

        $("#btnPz").click(function () {
            var row = $('#List').datagrid("getSelected");
            if (row == null) {
                $.messager.alert('提示', "请选中需要操作的数据", "info");
                return false;
            }
            op("产品采购详情" + row.ID + "", "../Purchase/ViewProcutPurchasePzDetailList?OddNum=" + row.PurchaseOddNum + "&finaId=" + row.ID);
        });

    });

    function Approve() {
        var row = $('#List').datagrid("getSelected");
        if (row == null) {
            $.messager.alert('提示', "请选中需要操作的数据", "info");
            return false;
        }
        if (row.Is_PzStatus != -1) {
            $.messager.alert('提示', "只能审核未审核数据", "info");
            return false;
        }
        $('#openIframeApprove')[0].src = "ViewProductPurchasePzApprove?id=" + row.ID;
        $("#approveDiv").dialog({
            onClose: function () {
                $("#List").datagrid("reload");//刷新列表 
            }
        });
        $('#approveDiv').dialog('open');
    }

    $("#btnQuery").click(function () {

        var queryStr = $("#txtQuery").val().trim();
        //如果查询条件为空默认查询全部
        if (queryStr == null) {
            queryStr = "%";
        }
        $('#List').datagrid({
            url: 'CheckedPurchasePaymentGoods?queryStr=' + encodeURI(queryStr) + "&pz=" + "pz"
        });

    });

</script>
<div id="pZDiv" class="easyui-dialog" closed="true" modal="true" title="产品采购凭证" style="width: 800px; height: 600px;" resizable="true" closable="true">
    <iframe scrolling="auto" id='openIframePz' frameborder="0" src="" style="width: 98%; height: 98%;"></iframe>
</div>
<div id="approveDiv" class="easyui-dialog" closed="true" modal="true" title="审核" style="width: 800px; height: 600px;" resizable="true" closable="true">
    <iframe scrolling="auto" id='openIframeApprove' frameborder="0" src="" style="width: 98%; height: 98%;"></iframe>
</div>
