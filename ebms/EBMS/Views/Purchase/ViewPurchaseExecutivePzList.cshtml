@{
    ViewBag.Title = "ViewPurchaseExecutivePzList";
    Layout = "~/Views/Shared/_Main_Edit.cshtml";
}

<script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
<div class="Company-top-box">
    <div class="search-box">
        <input type="text" placeholder="订单号" id="code" />
        科目:
    @Html.DropDownList("sub", ViewData["subject"] as List<SelectListItem>)
        部门:
    @Html.DropDownList("dep", ViewData["depart"] as List<SelectListItem>)
        <input type="button" value="查询" id="btnQuery" class="icon-search">
    </div>
</div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>
<script type="text/javascript">
    //回车触发查询
    enterSearch("#btnQuery");
    $(function () {
        var url = "GetExecutivePzList";
        $('#List').datagrid({
            url: url,
            width: $(window).width() - 15,
            method: 'post',
            height: $(window).height() * 0.95,
            fitColumns: true,
            sortName: 'ID',
            sortOrder: 'desc',
            idField: 'id',
            pageSize: 20,
            pagination: true,
            showFooter: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            rownumbers: false,//行号
            columns: [[
                { field: 'PZ_OrderNum', title: '采购单号', width: 60, align: 'center' },
                { field: 'PZ_Summary', title: '厂家', width: 100, align: 'center' },
                { field: 'PZ_Subject', title: '科目', width: 80, align: 'center' },
                { field: 'PZ_Department', title: '部门', width: 60, align: 'center' },
                { field: 'PZ_Time', title: '凭证时间', width: 80, align: 'center', formatter: formatDatebox },
                 { field: 'PZ_Money', title: '凭证费用', width: 80, align: 'center' },
                             {
                                 field: 'PZ_Direction', title: '借贷方向', width: 60, align: 'center', formatter: function (value, row, index) {
                                     switch (value) {
                                         case 0:
                                             return "<font color=green>借</font>"
                                             break;
                                         case 1:
                                             return "<font color=blue>贷</font>"
                                             break;
                                         default:
                                             return ""
                                     }
                                 }
                             }
            ]]
        });
        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            }).datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            });
        });

        $("#btnQuery").click(function () {
            $('#List').datagrid({
                url: 'GetExecutivePzList?code=' + $("#code").val().trim() + "&sub=" + $("#sub option:selected").val() + "&dep=" + $("#dep option:selected").val()
            });

        });
    });
</script>
