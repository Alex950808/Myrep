    <script type="text/javascript">
        $(".J-showCode").click(function () {
            var _src = $(this).attr("data-src");
            $("#mask").show();
            $("#Code").attr("src", _src);
        })
        $("#closeBtn").click(function () {
            $("#mask").hide();
            $("#Code").attr("src", "");
        })
        $(function () {
            var name = "@ViewData["name"]";
            var userpow = "@ViewData["userpow"]";
           
            if (name != null && name != "" && userpow != "" && userpow != null) {
                $("#remenberMe").attr("checked", "checked");
            }
            $("#user-name").val(name);
            $("#user-password").val(userpow);
            if (self.location != top.location) {
                top.location.href = '/admin/Account';
            }
            //登录按钮点击事件
            $("#login-btn").click(function () {
                LoginSys();
            })
            //登录按钮点击事件
            $(document).keydown(function(event){ 
                if(event.keyCode==13){ 
                    LoginSys();
                    $(".login-form .login-txt").blur();
                }
            })
            //输入框获取焦点，恢复默认样式。
            $(".login-form .login-txt").focus(function () {
                $(this).closest(".l-f-l").css("border-bottom", "1px solid #1f8ede").find(".icon").css("color", "#1f8ede")
                if ($(this).hasClass("errorMsg")) {
                    $(this).removeClass("errorMsg").val("")
                }
                if ($(this).attr("id") == "user-password") {
                    $(this).attr("type", "password")
                }
            })
            $(".login-form .login-txt").blur(function () {
                $(this).closest(".l-f-l").css("border-bottom", "1px solid #ddd").find(".icon").css("color","#666")
              
                  
               
            })
        })
            function LoginSys() {
                $("#mes").html("");
                var userName = $("#user-name").val();
                var userPassword = $("#user-password").val();
                //验证帐号和密码的输入框是否填写了没有填写提示错误信息
                if ($.trim(userName) == "" || userName == null) {
                    $("#user-name").addClass("errorMsg")
                    $("#user-name").val("帐号不能为空")
                    return;
                }
                if ($.trim(userPassword) == "" || userPassword == null) {
                    $("#user-password").addClass("errorMsg")
                    $("#user-password").val("密码不能为空")
                    $("#user-password").attr("type", "text")
                    return;
                }
                $("#Loading").show();
                var a = 0;
                if ($('#remenberMe').is(':checked')) { a = "1" }
                $.post('/Home/Login', { UserName: userName, Password: userPassword, remenberMe: a },
                function (data) {

                    if (data.message == "1") {
                        window.location = "/Home/Index"
                    } else {
                        $("#mes").html(data.message);
                    }
                    $("#Loading").hide();
                }, "json");
                return false;
            }
    </script>
