@{
    ViewBag.Title = "SendCompensationCostList";
    Layout = "~/Views/Shared/_Main_Edit.cshtml";
}


<script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
<div class="mvctool">
    <span style="float: left; color: #808080; padding-right: 10px; font-size: 13px; margin-top: 3px">运单号</span>
    <input id="number" type="text" class="searchText" />
    <span style="float: left; color: #808080; padding-right: 10px; font-size: 13px; margin-top: 3px">结算日期</span>
    <input name="settlementStartDate" style="float: left;" value="@ViewData["date"]" id="settlementStartDate" class="easyui-datebox" data-options="sharedCalendar:'#settlementStartDate'">
    至
    <input name="settlementEndDate" style="float: left;" value="" id="settlementEndDate" class="easyui-datebox" data-options="sharedCalendar:'#settlementEndDate'">
    <span style="color: #808080; padding-right: 10px; font-size: 13px; margin-top: 3px">有偿派费名称</span>
    @Html.DropDownList("compensationName", ViewData["compensationName"] as List<SelectListItem>, new { @id = "compensationName" })
    <input type="button" value="查询" id="btnQuery" class="icon-search">
</div>


<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>
<script type="text/javascript">
    enterSearch("#btnQuery");
    $(function () {
        var s;
        var url = "GetCompensationSendCostList/?settlementStartDate=" + "@ViewData["date"]";
        $('#List').datagrid({
            url: url,
            width: $(window).width() - 10,
            method: 'post',
            height: $(window).height() - 35,
            fitColumns: true,
            sortName: 'SettlementDate',
            sortOrder: 'desc',
            pageSize: 30,
            pagination: true,
            striped: true,
            singleSelect: true,//单选模式
            rownumbers: false,//行号 
            columns: [[
                { field: 'SettlementDate', title: '结算日期', width: 70, align: 'center' },
                { field: 'SettlementDateOld', title: '原结算日期', width: 70, align: 'center' },
                { field: 'Number', title: '运单号', width: 100, align: 'center' },
                { field: 'CheckChildComPanyName', title: '对账公司', width: 120, align: 'center' },
                { field: 'StartAdressName', title: '始发名称', width: 120, align: 'center' },
                { field: 'DestinationName', title: '目的名称', width: 120, align: 'center' },
                { field: 'SettlementName', title: '费用名称', width: 90, align: 'center' },
                { field: 'SettlementCost', title: '结算费用', width: 60, align: 'center' },
                { field: 'ConsigneeName', title: '揽件员名称', width: 65, align: 'center' },
                { field: 'SendName', title: '派送员名称', width: 60, align: 'center' },
                { field: 'ArriveDate', title: '到件时间', width: 100, align: 'center' },
                { field: 'SendDate', title: '分发时间', width: 100, align: 'center' },
                { field: 'SignInDate', title: '签收时间', width: 100, align: 'center' },
                { field: 'ActualDeliveryTime', title: '实际派送时', width: 65, align: 'center' },
                { field: 'ProvisionDate', title: '规定派送时', width: 65, align: 'center' },
                { field: 'SettlementWeight', title: '结算重量', width: 60, align: 'center' },
            { field: 'TransportWay', title: '运输方式', width: 60, align: 'center' }
            ]]
        });
        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 10,
                height: $(window).height() - 40
            }).datagrid('resize', {
                width: $(window).width() - 10,
                height: $(window).height() - 40
            });
        });
    });
    $("#balanceName").change(function () {
        query();
    });
    $("#compensationName").change(function () {
        query();
    });
    $("#btnQuery").click(function () {
        query();
    });

    function query() {
        var number = $("#number").val().trim();
        var settlementStartDate = $('#settlementStartDate').datebox('getValue');
        var settlementEndDate = $('#settlementEndDate').datebox('getValue');
        var selectcompensationName = $("#compensationName option:selected").val();
        $('#List').datagrid({
            url: 'GetCompensationSendCostList?number=' + number + '&settlementStartDate=' + settlementStartDate + '&settlementEndDate=' + settlementEndDate + '&compensationName=' + selectcompensationName
        });
        $("#txtQuery").focus().select();
    }
</script>


