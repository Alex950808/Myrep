@{
    ViewBag.Title = "ViewOrderStatusCount";
    Layout = "~/Views/Shared/_Main_Edit.cshtml";
}


<script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
<table id="List"></table>
<script type="text/javascript">

    $(function () {
        var url = "GetVieOrderCountList?code=" + "@ViewData["code"]" + "&status=" + "@ViewData["status"]";
        $('#List').datagrid({
            url: url,
            width: $(window).width(),
            method: 'post',
            height: $(window).height() * 0.97,
            fitColumns: true,
            sortName: 'ID',
            sortOrder: 'desc',
            pageSize: 10,
            pagination: true,
            striped: true,
            singleSelect: true,//单选模式
            rownumbers: false,//行号 
            columns: [[
                { field: 'Number', title: '订单号', width: 110, align: 'center' },
                { field: 'Cost', title: '金额', width: 140, align: 'center' },
                { field: 'Reson', title: '原因', width: 50, align: 'center' }
            ]]
        });
    });

    //grid 大小随窗口变化
    $(window).resize(function () {
        $('#List').datagrid('resize', {
            width: $(window).width(),
            height: $(window).height() - 30
        }).datagrid('resize', {
            width: $(window).width(),
            height: $(window).height() - 30
        });
    });

</script>

