@model EBMS.Models.T_BorrowGoodsConfig
@{
    ViewBag.Title = "ViewConfigEdit";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {
        var flag = 0;
        $('#btnSave').click(function () {
           
            if ($("#EditForm").valid() && flag == 0) {
                loading(0)
                flag += 1;
                $.ajax({
                    url: "ConfigEditSave",
                    type: "Post",
                    data: $("#EditForm").serialize(),
                    dataType: "json",
                    success: function (data) {
                        loading(1);
                        if (data.State == "Success") {
                            parent.$('#List').datagrid('reload');
                           
                            $.messager.alert("提示", "@Lib.MessageRes.SaveOK", "info", function () {
                                parent.$('#EditDiv').dialog('close');
                            })
                            parent.$('#List').datagrid("clearSelections");
                        }
                        else {
                            $.messager.alert("提示", data.Message, "info");
                            sign = 0;
                           
                        }
                    },
                    error: function (data)
                    {
                        $.messager.alert("提示", data, "info");
                    }
                });
            }
            return false;

        });
        $('#Type').change(function () {
            if ($('#Type').val() != "审核人") {
                $('#Step').val(-1)
            }
           
         })
    })
   


</script>
<style>
    .lab {
  width: 110px; 
  text-align: right;}
</style>
<div class="mvctool">
    <a id="btnSave" href="javascript:;" class="modal-btn modal-btn-save">保存</a>
    
</div>

<div>
    @using (Html.BeginForm("EditForm", "Controllers", null, FormMethod.Post, new { Id = "EditForm" }))
{
    @Html.ValidationSummary(true)
    <table class="fromEditTable setTextWidth300">
       
        <tbody>
            <tr>
              <td class="lab">
                  @Html.Label("类型"):
               </td>
               <td>
                   @Html.TextBoxFor(model => model.Type, new { @readonly=true})
               </td>
                   <td>
                   @Html.ValidationMessageFor(model => model.Type)
               </td>
         </tr>
          <tr>
              <td class="lab">
                  @Html.Label("名称"):
               </td>
               <td>
                   @Html.TextBoxFor(model => model.Name)
               </td>
               <td>
                   @Html.ValidationMessageFor(model => model.Name)
               </td>
          </tr> 
             <tr>
              <td class="lab">
                  @Html.Label("步骤"):
               </td>
               <td>
                   @Html.TextBoxFor(model => model.Step)
               </td>
                  <td>
                   @Html.ValidationMessageFor(model => model.Step)
               </td>
          </tr> 
               
         
        </tbody>
    </table>
           @Html.HiddenFor(model => model.ID)
         
}

</div>



