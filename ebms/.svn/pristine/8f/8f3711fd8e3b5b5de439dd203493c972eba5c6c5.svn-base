@{
    //商品列表
    ViewBag.Title = "ViewRetreatPaymentList";
    Layout = "~/Views/Shared/_Main_Edit.cshtml";
}
<script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
<style>
    #methodQuery {
        margin-left: 5px;
    }
</style>
<div class="Company-top-box">
    <div class="search-box">
        <input type="text" placeholder="帐号/店铺/出纳.." id="txtQuery" class="icon-search-txt">
        <input type="button" value="查询" id="btnQuery" class="icon-search">
    </div>
    <div class="btn-bar">
        <a href="#" id="btnAdd" class="icon-add">新增</a>
        <a href="#" id="btnDelete" class="icon-add">删除</a>
    </div>
</div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>
<script type="text/javascript">
    enterSearch("#btnQuery");
    function op(name, url) {
        self.parent.addTab(name, url, '');
        getContextmenu()
    }
    var statusVal = $("#selStatus").val();
    $(function () {
        $("body").css({ "padding": "5px 0 0 7px", "overflow": "hidden" });
        $(".search-box .combo-arrow").css("margin-top","4px")
        var url = "../Retreat/GetPaymentList";
        $('#List').datagrid({
            url: url,
            width: $(window).width() - 15,
            method: 'post',
            height: $(window).height() - 50,
            fitColumns: true,
            sortName: 'ID',
            sortOrder: 'desc',
            idField: 'ID',
            pageSize: 20,
            pagination: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            columns: [[
                 { field: 'PaymentAccounts', title: '帐号', width: 300, align: 'center' },
                 //{ field: 'PaymentAccountsName', title: '支出人', width: 300, align: 'center' },
                 { field: 'ShopName', title: '店铺名称', width: 300, align: 'center' },
                    {
                        field: 'IsBlending', title: '是否主帐号', width: 300, align: 'center', formatter: function (value, row, index) {
                            if (row.IsBlending == "1") {
                                return "<font color=#d02e2e>是</font>";
                            }
                            else {
                                return "<font color=#2967c9>否</font>";
                            }

                        }
                    },
            ]],
            onClickRow: function (rowIndex, rowData) {
            },
            onDblClickRow: function (rowIndex, rowData) {
            },
            onAfterEdit: function (index, rowData) {//回调函数可以直接用于操作页面
            }
        });
        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            }).datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            });
        });
    });
    $("#btnQuery").click(function () {
        var queryStr = $("#txtQuery").val();

        //如果查询条件为空默认查询全部
        if (queryStr == null) {
            queryStr = "%";
        }
            var val = $("#selStatus").val();
            $('#List').datagrid({
                url: '../Retreat/GetPaymentList?queryStr=' + encodeURI(queryStr)
            });
    });
    $("#btnAdd").click(function () {
        $('#openIframeAdd')[0].src = "/Retreat/RetreatPaymentAdd";
        $('#addDiv').dialog('open');
    });
    $("#btnDelete").click(function () {
        var row = $('#List').datagrid('getSelected');
        if (row != null) {
            $.messager.confirm('提示', '确定删除该记录吗？', function (r) {
                loading(0);
                if (r) {
                    var flag = 0
                    if (flag == 0) {
                        flag++
                        $.ajax({
                            url: "../Retreat/Del?ID=" + row.ID,
                            type: "Post",
                            contentType: "application/json",
                            // data: JSON.stringify(p),
                            dataType: "json",
                            success: function (data) {
                                loading(1);
                                $.messager.alert('提示', data, "info");
                                $('#List').datagrid('reload');
                                flag = 0
                                $('#List').datagrid("clearSelections");
                            }, error: function () {
                                loading(1);
                                flag = 0
                            }

                        });
                    }
                }
                else {
                    loading(1);
                }
            });
        }
        else {
            $.messager.alert('提示', '请选择一条记录', "info");
        }
    });
</script>
<div id="addDiv" class="easyui-dialog" closed="true" modal="true" title="新增流程" style="width:420px; height:420px;" resizable="true" closable="true">
    <iframe scrolling="yes" id='openIframeAdd' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>
