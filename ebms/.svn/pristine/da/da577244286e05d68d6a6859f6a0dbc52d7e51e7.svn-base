@model EBMS.Models.T_RetreatPayment
@using Lib
@{
    ViewBag.Title = "RetreatPaymentAdd";
    Layout = "~/Views/Shared/_Main_Edit.cshtml";
}
<style>
    #Repeat {
        border: 0;
        outline: 0;
    }
</style>
<div class="mvctool">
    <input id="btnSave" class="modal-btn modal-btn-save" type="submit" value="保存">
</div>
@using (Html.BeginForm("EditForm", "Controller", null, FormMethod.Post, new { Id = "EditForm" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.ValidationSummary(true)
    <table class="fromEditTable setTextWidth300" id="cashback">
        <tr>
            <td style="width: 80px; text-align: right;">
                支付帐号：
            </td>
            <td>
                @Html.TextBoxFor(model => model.PaymentAccounts)
            </td>
        </tr>
        <tr>
            <td style="width: 80px; text-align: right;">
                店铺名称：
            </td>
            <td>
                @Html.DropDownListFor(model => model.ShopName, ViewData["ShopName"] as List<SelectListItem>)

            </td>
        </tr>
        @*<tr>
            <td style="width: 80px; text-align: right;">
                支出人：
            </td>
            <td>
                @Html.DropDownListFor(model => model.PaymentAccountsName, ViewData["PaymentAccountsName"] as List<SelectListItem>)
               

            </td>
        </tr>*@
        <tr>
            <td style="text-align: right">
                是否主帐号:
            </td>
            <td>
                <input type="radio" name="IsBlending" value="1" />是
                <input type="radio" name="IsBlending" value="0" checked="checked" />否
            </td>
        </tr>
    </table>
}
<script type="text/javascript">



    var flag = 0
    var V = 0;
    $("#btnSave").click(function () {
        
        if ($("#ShopName").val() == "") {
            $.messager.alert('提示', "请选择一个店铺", "info")
            loading(1);
            return
        }

        if ($("#PaymentAccounts").val() == "") {
            $.messager.alert('提示', "请填写一个支出账号", "info")
            loading(1);
            return
        }
        if (flag == 0) {
            flag++;
            loading(0)
            V = 0;
            if (V == 0 && $("#EditForm").valid()) {
                $.ajax({
                    url: "AddSave",
                    type: "Post",
                    data: $("#EditForm").serialize(),
                    success: function (data) {
                        if (data.State == "Success") {
                            $.messager.alert('提示', "操作成功", "info", function () {
                                loading(1)
                                parent.$('#addDiv').dialog('close');
                                parent.$('#List').datagrid('reload');
                                parent.$('#List').datagrid("clearSelections");
                                window.location.reload();

                            });
                        } else {
                            $.messager.alert('提示', data.Message, "info", function () {
                                flag = 0;
                                loading(1)
                            });
                        }
                    }
                });
            }
        }
    })

</script>


