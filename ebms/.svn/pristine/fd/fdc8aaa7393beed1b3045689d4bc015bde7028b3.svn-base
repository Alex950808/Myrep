@model EBMS.Models.T_ExpenseAcount
@{
    ViewBag.Title = "ViewExpenseAcountEdit";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('#btnSave').click(function () {
            var flag = 0;
            if ($('#Number').val() == "" || $('#Number').val() == null)
            {
                $.messager.alert("提示", "请输入账号", "info")
                return false;
            }
            if ($("#EditForm").valid() && flag == 0) {
                flag = 1;
                loading(0);
                $.ajax({
                    url: "/BasicInformation/ExpenseAcountEditSave",
                    type: "Post",
                    data: $("#EditForm").serialize(),
                    dataType: "json",
                    success: function (data) {
                        if (data.State == "Success") {
                            loading(1)
                            parent.$('#List').datagrid('reload');
                            $.messager.alert("提示", "@Lib.MessageRes.SaveOK", "info", function () {
                                parent.$('#AddDiv').dialog('close');
                            })
                        }
                        else {
                            loading(1)
                            $.messager.alert("提示", data.Message, "info");
                            flag = 0;

                        }
                        parent.$('#List').datagrid("clearSelections");
                    },
                    error: function (data) {
                        loading(1);
                        flag = 0;
                        $.messager.alert('提示', data, "info");
                    }
                });

            }
        })
    })
</script>
<div class="mvctool">
    <a id="btnSave" href="javascript:;" class="modal-btn modal-btn-save">保存</a>
</div>

<div>
    @using (Html.BeginForm("EditForm", "Controllers", null, FormMethod.Post, new { Id = "EditForm" }))
    {
        @Html.ValidationSummary(true)
        <table class="fromEditTable setTextWidth300">

            <tbody>
                <tr>
                    <td style="width: 80px; text-align: right;">
                        公司:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.ComPany)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.ComPany)
                    </td>
                </tr>
                <tr>
                    <td style="width: 80px; text-align: right;">
                        账号:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Number)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.Number)
                    </td>
                </tr>
                <tr>
                    <td style="width: 80px; text-align: right;">
                        序号:
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.type)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.type)
                    </td>
                </tr>
            </tbody>
        </table>
        @Html.HiddenFor(model => model.ID)

    }

</div>
