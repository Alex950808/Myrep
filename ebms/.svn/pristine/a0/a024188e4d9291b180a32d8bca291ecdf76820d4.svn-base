    function CopelPays() {

        var rows = $('#List').datagrid('getRows');
        var pay = 0;
        for (var i = 0; i < rows.length; i++) {
            if (rows[i].qty != null && rows[i].UnitPrice != null)
                pay += rows[i].qty * rows[i].UnitPrice;
            pay = Math.round(pay * 100) * 0.01;
        }

        $('#TheInvoiceAmount').val(pay.toFixed(2))
    }
    //添加一行空的数据
    function addRow() {
