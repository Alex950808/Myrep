<script src="@Url.Content("~/Scripts/jquery.zclip.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    var who;
    $(function () {
        who="@ViewData["Who"]";
    });

    //同意
    $('#btnAgree').click(function () {
        if (who == "财务") {
            $('#FinanceApproveStatus').val(1);
        }
        if (who == "快递组") {
            $('#ExpressApproveStatus').val(1);
        }
        if (who == "仓库") {
            $('#WarehouseApproveStatus').val(1);
        }
        $.ajax({
            url: "Approve",
            type: "post",
            dataType: "json",
            data: $("#EditForm").serialize(),
            success: function (data) {
                //alert(data.Msg);
                if (data.State == "Success") {
                    parent.$('#List').datagrid('reload');
                    parent.$('#checkDiv').dialog('close');
                }
                else {
                    alert(data.Msg);
                }
            },
            error: function (err) {
                console.log(err);
            }
        })
    })
    //不同意
    $('#btnDisAgree').click(function () {
        if (who == "财务") {
            $('#FinanceApproveStatus').val(2)
        }
        if (who == "快递组") {
            $('#ExpressApproveStatus').val(2);
        }
        if (who == "仓库") {
            $('#WarehouseApproveStatus').val(2);
        }
        $.ajax({
            url: "Approve",
            type: "post",
            dataType: "json",
            data: $("#EditForm").serialize(),
            success: function (data) {
                //alert(data.Msg);
                if (data.State == "Success") {
                    parent.$('#List').datagrid('reload');
                    parent.$('#checkDiv').dialog('close');
                }
                else {
                    alert(data.Msg);
                }
            },
            error: function (err) {
                console.log(err);
            }
        })
    })

</script>

