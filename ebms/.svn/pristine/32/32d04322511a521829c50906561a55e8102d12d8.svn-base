@{
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
<div class="Company-top-box">
    <div class="search-box">
         <input type="text" placeholder="入职者真名/花名.." id="txtQuery"  class="icon-search-txt">
             <select id="selStatus" name="selStatus" class="sel-box">
        <option value="9999" selected="">审核状态</option>
        <option value="2">不同意</option>
        <option value="1">已同意</option>
        <option value="0">审核中</option>
        <option value="-1">未审核</option>
         <option value="3">已作废</option>
    </select>
         <input type="button" value="查询" id="btnQuery" class="icon-search">
    </div>
   @* <div class="btn-bar">
          <a href="#" id="btnEdit" class="icon-edit">编辑</a>
         <a href="#" id="btnVoid" class="icon-void">作废</a>
         <a href="#" id="btnDelete" class="icon-remove">删除</a>
         <p class="showBar">查看详情 : 请双击需要查看的数据</p>
    </div>*@
</div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>
<script type="text/javascript">
    enterSearch("#btnQuery");
    function op(name, url) {
        self.parent.addTab(name, url, '');
        getContextmenu()
    }

    var statusVal = $("#selStatus").val();
    $(function () {
        var url = "../Joined/ShowJoinedList?Status=" + statusVal;
        $('#List').datagrid({
            url: url,
            width: $(window).width() - 15,
            method: 'post',
            height: $(window).height() - 50,
            fitColumns: true,
            sortName: 'id',
            sortOrder: 'desc',
            idField: 'id',
            pageSize: 20,
            pagination: true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            columns: [[
                 { field: 'Code', title: '审批编号', width: 200, align: 'center' },
                 { field: 'PostTime', title: '申请时间', width: 100, align: 'center', formatter: formatDatebox },
                 { field: 'Nickname', title: '花名', width: 100, align: 'center' },
                 { field: 'Name', title: '入职者真实姓名', width: 100, align: 'center' },
                 { field: 'Sex', title: '性别', width:60, align: 'center' },
                 { field: 'Tel', title: '电话号码', width: 100, align: 'center' },
                 { field: 'Department', title: '入职部门', width: 100, align: 'center' },
                 { field: 'SetGroup', title: '入职分组', width: 100, align: 'center' },
                 { field: 'Job', title: '岗位', width: 100, align: 'center' },
                 {
                     field: 'Status', title: '状态', width: 100, align: 'center', formatter: function (value, row, index) {
                         switch (row.Status) {
                             case -1:
                                 return "<font color=#d02e2e>未审核</font>";
                                 break;
                             case 0:
                                 return "<font color=#2967c9>审核中</font>";
                                 break;
                             case 1:
                                 return "<font color=#1fc73a>已同意</font>";
                                 break;
                             case 2:
                                 return "<font color=#d02e2e>不同意</font>";
                                 break;
                             case 3:
                                 return "<font color=#d02e2e>已作废</font>";
                                 break;
                         }
                     }
                 },
             
            {
                field: 'action', title: '操作', width:100, align: 'center',
                 formatter: function (value, row, index) {
                     var e = ' <div class="btn-bar"><a href="#" class="icon-edit" onclick=Show(' + row.ID + ')>查看详情</a></div>';
                   return e;
             }
    }
            ]],
            onClickRow: function (rowIndex, rowData) {
            },
            onDblClickRow: function (rowIndex, rowData) {
                Show(rowData.ID)
            },
            onAfterEdit: function (index, rowData) {//回调函数可以直接用于操作页面
            }
        });
        //grid 大小随窗口变化
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            }).datagrid('resize', {
                width: $(window).width() - 15,
                height: $(window).height() - 50
            });
        });
    });
    $("#btnEdit").click(function () {
        var row = $('#List').datagrid('getSelected');
        if (row != null) {
            if (row.Status != -1 && row.Status != 2) {
                $.messager.alert('提示', '只能编辑未审核和不同意的记录', "info");
                return;
            }
            op("入职申请编辑：" + row.ID, "/Joined/ViewJoinedEdit?ID=" + row.ID)
        }
        else { $.messager.alert('提示', '请选择一条记录', "info"); }
    });
  
    //得到选中行集合的id
    function getSelections() {
        var ss = [];
        var rows = $('#List').datagrid('getSelections');
        for (var i = 0; i < rows.length; i++) {
            var row = rows[i];
            ss.push(row.Id);
        }
        return ss;
    }
    $("#btnQuery").click(function () {

        var queryStr = $("#txtQuery").val();

        //如果查询条件为空默认查询全部
        if (queryStr == null) {
            queryStr = "%";
        }
        var val = $("#selStatus").val();

        $('#List').datagrid({
            url: '../Joined/ShowJoinedList?queryStr=' + encodeURI(queryStr) + "&status=" + val
        });

    });
    $("#btnDelete").click(function () {
        var row = $('#List').datagrid('getSelected');
        if (row != null) {
            if (row.Status != -1 ) {
                $.messager.alert('提示', '只能删除未审核的记录', "info");
                return;
            }

            $.messager.confirm('提示', '确定删除该记录吗？', function (r) {
                loading(0);
                if (r) {
                    var flag = 0
                    if (flag == 0) {
                        flag++            
                        $.ajax({
                            url: "../Joined/DeleteJoined?ID=" + row.ID,
                            type: "Post",
                            contentType: "application/json",
                           // data: JSON.stringify(p),
                            dataType: "json",
                            success: function (data) {
                                loading(1);
                                $('#List').datagrid('reload');
                                flag = 0
                                $('#List').datagrid("clearSelections");
                            }, error: function () {
                                loading(1);
                                flag = 0
                            }

                        });
                    }
                }
                else {
                    loading(1);
                }
            });
        }
        else {
         $.messager.alert('提示', '请选择一条记录', "info");
        }
    });
    $("#btnVoid").click(function () {
        var row = $('#List').datagrid('getSelected');
        if (row != null) {
            if (row.Status != -1 && row.Status != 2) {
                $.messager.alert('提示', '只能作废未审核和不同意的记录', "info");
                return;
            }
            $.messager.confirm('提示', '确定作废该记录吗？', function (r) {
                loading(0);
                if (r) {
                    var flag = 0
                    if (flag == 0) {
                        flag++
                        $.ajax({
                            url: "../Joined/VoidJoined?ID=" + row.ID,
                            type: "Post",
                            contentType: "application/json",
                            // data: JSON.stringify(p),
                            dataType: "json",
                            success: function (data) {
                                loading(1);
                                $('#List').datagrid('reload');
                                flag = 0

                            }, error: function () {
                                loading(1);
                                flag = 0
                            }
                        });
                    }
                }
                else {
                    loading(1);
                }
            });
        } else {
            $.messager.alert('提示', '请选择一条记录', "info");
        }
        
    })
    function Show(id) {
        var url = "../Joined/ViewJoinedDetail?ID=" + id
        window.open(url, "_blank", "height=" + (window.screen.availHeight - 30) + ",width=" + (window.screen.availWidth - 10) + ",scrollbars=yes,resizable=1,modal=false,alwaysRaised=yes");
    }
</script>
<div id="showDiv" class="easyui-dialog" closed="true" modal="true" title="审核详情" style="width:420px; height:420px;" resizable="true" closable="true">
    <iframe scrolling="yes" id='openIframeShow' frameborder="0" src="" style="width:100%;height:98%;"></iframe>
</div>
